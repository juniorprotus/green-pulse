{
    "hosting": {
        "public": "client",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(js|html)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=3600"
                    }
                ]
            },
            {
                "source": "**/*.@(css|jpg|jpeg|png|gif|svg|ico)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=86400"
                    }
                ]
            }
        ]
    }
}